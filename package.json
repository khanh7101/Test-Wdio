{
  "name": "wdio-test-automation-framework",
  "version": "1.0.0",
  "description": "Comprehensive WebdriverIO test automation framework with Allure reporting, email notifications, and multi-platform CI/CD support",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/test-runner.js",
    "test:local": "wdio run config/wdio.local.conf.ts",
    "test:fast": "wdio run config/wdio.fast.conf.ts",
    "test:cloud": "wdio run config/wdio.cloud.conf.ts",
    "test:mobile": "wdio run config/wdio.mobile.conf.ts",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "validate:env": "ts-node scripts/validate-env.ts",
    "report:clean": "ts-node scripts/cleanup-reports.ts",
    "test:report": "npm run validate:env && npm run test && npm run allure:generate",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"tests/**/*.ts\" \"config/**/*.ts\" \"scripts/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "webdriverio",
    "wdio",
    "test-automation",
    "allure",
    "typescript",
    "selenium",
    "testing"
  ],
  "author": "Enouvo QA Team",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@faker-js/faker": "^9.3.0",
    "@moroo/wdio-slack-reporter": "^9.0.0",
    "@slack/web-api": "^7.12.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^7.0.5",
    "@types/pdf-parse": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@wdio/allure-reporter": "^9.23.2",
    "@wdio/appium-service": "^9.23.2",
    "@wdio/browserstack-service": "^9.23.2",
    "@wdio/cli": "^9.23.2",
    "@wdio/devtools-service": "^10.0.0",
    "@wdio/globals": "^9.23.0",
    "@wdio/junit-reporter": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/shared-store-service": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "allure-commandline": "^2.29.0",
    "appium": "^3.1.0",
    "appium-uiautomator2-driver": "^6.1.0",
    "appium-xcuitest-driver": "^10.4.0",
    "chalk": "^4.1.2",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-wdio": "^9.16.2",
    "exceljs": "^4.4.0",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemailer": "^6.9.8",
    "nodemailer-express-handlebars": "^6.1.0",
    "pdf-parse": "^2.4.5",
    "prettier": "^3.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webdriverio": "^9.23.0",
    "wdio-slack-service": "^2.0.9",
    "wdio-video-reporter": "^6.2.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}