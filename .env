# ====================
# WDIO Test Framework Configuration - EXAMPLE
# ====================
# Copy this file to .env and update with your actual values
# cp .env.example .env

# ====================
# Test Environment Selection
# ====================
# Options: dev, staging, prod
TEST_ENV=dev

# ====================
# Execution Mode
# ====================
# Options: local, fast, cloud, mobile
EXECUTION_MODE=local

# ====================
# Environment URLs
# ====================
BASE_URL_DEV=https://www.passiondental.com.vn/vi
BASE_URL_STAGING=https://www.passiondental.com.vn/vi
BASE_URL_PROD=https://www.passiondental.com.vn/vi

# ====================
# Test Credentials (Optional)
# ====================
ADMIN_USERNAME=admin@example.com
ADMIN_PASSWORD=admin123
USER_USERNAME=user@example.com
USER_PASSWORD=user123

# ====================
# Browser Configuration
# ====================
# Comma-separated list: chrome,firefox,safari,edge
BROWSERS=chrome
HEADLESS=false

# ====================
# Parallel Execution
# ====================
WORKERS=4
FULLY_PARALLEL=false

# ====================
# Timeouts (milliseconds)
# ====================
DEFAULT_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=60000
SCRIPT_TIMEOUT=30000

# ====================
# BrowserStack Configuration
# ====================
BROWSERSTACK_USER=your-browserstack-username
BROWSERSTACK_KEY=your-browserstack-access-key
BROWSERSTACK_ENABLED=false
BROWSERSTACK_BUILD_NAME=WDIO Test Build
BROWSERSTACK_PROJECT_NAME=WDIO Automation

# ====================
# Appium (Mobile Testing)
# ====================
APPIUM_HOST=localhost
APPIUM_PORT=4723

# Mobile Platform (iOS or Android)
MOBILE_PLATFORM=Android

# iOS Configuration
IOS_DEVICE_NAME=iPhone 14
IOS_PLATFORM_VERSION=16.0

# Android Configuration
ANDROID_DEVICE_NAME=Android Emulator
ANDROID_PLATFORM_VERSION=13.0

# ====================
# Slack Notifications
# ====================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=false
SLACK_CHANNEL=#test-automation

# ====================
# Email Notifications (Gmail SMTP)
# ====================
# Gmail account for sending reports
GMAIL_USER=khanhvuduy7101@gmail.com
# Gmail App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=llcp pvqf hira vaoo

# Recipients for test reports (comma-separated)
# Will receive comprehensive test report regardless of pass/fail status
EMAIL_RECIPIENTS=khanhvuduy7101@gmail.com

# ====================
# Company Branding (for email templates)
# ====================
COMPANY_NAME=Your Company
COMPANY_WEBSITE=https://yourcompany.com
COMPANY_LOGO_URL=https://yourcompany.com/logo.png

# ====================
# Report Configuration
# ====================
# Public URL for reports (used in emails and Slack)
REPORT_URL=

# Days to keep old reports
REPORT_RETENTION_DAYS=30

# Port for local report server
REPORT_SERVER_PORT=8080

# ====================
# Reporting Features
# ====================
ALLURE_ENABLED=true
VIDEO_ENABLED=false
SCREENSHOT_ON_FAILURE=true

# ====================
# Logging
# ====================
# Options: trace, debug, info, warn, error, silent
LOG_LEVEL=info
DEBUG=false

# ====================
# CI/CD Integration
# ====================
# These are usually set by CI/CD platform automatically
# CI_PLATFORM=gitlab|github|jenkins
# CI_BUILD_NUMBER=
# CI_BUILD_URL=
# CI_BRANCH=
